<div class="container p-4">
    <div class="row justify-content-center align-items-center">
        <div class="col-md4 mx-auto">
            <div class="card">
                <div class="card-body">              
                    <table>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Code</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>Thumbnails</th>
                        </tr>
                        {{#each products}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.code}}</td>
                            <td>{{this.price}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.stock}}</td>
                            <td>{{this.category}}</td>
                            <td>
                                {{#each this.thumbnails}}
                                <a href="{{this}}">{{this}}</a><br>
                                {{/each}}
                            </td>
                        </tr>
                        {{/each}} 
                    </table>
                                      
                    
                </div>
            </div>
        </div>
    </div>
</div>